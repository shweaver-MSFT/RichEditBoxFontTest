<Page
    x:Class="RichTextBoxFontTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RichTextBoxFontTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Center" Margin="48" MinWidth="400">
        <RichEditBox 
            Name="MyRichEditBox" 
            FontFamily="Great Vibes"
            MinHeight="400"
            Header="RichEditBox Font test" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="SaveButton_Click">Save</Button>
            <Button Click="OpenButton_Click">Open</Button>
            <Button Click="ReloadButton_Click">Reload in new view</Button>
        </StackPanel>
    </StackPanel>
</Page>
